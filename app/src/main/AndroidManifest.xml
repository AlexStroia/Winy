<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.alexdev.winy">

    <application
        android:name=".WinnyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.ui.search.SearchActivity"
            android:parentActivityName=".feature.ui.product.ProductActivity"
            android:theme="@style/SearchActivityTheme" />
        <activity
            android:name=".feature.ui.detail.DetailActivity"
            android:parentActivityName=".feature.ui.product.ProductActivity" />
        <activity android:name=".feature.ui.help.HelpActivity" />
        <activity android:name=".feature.ui.account.AccountActivity" />
        <activity android:name=".feature.ui.product.ProductActivity" />
        <activity
            android:name=".feature.ui.signup.SignupActivity"
            android:launchMode="singleTop" />
        <activity android:name=".feature.ui.login.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>