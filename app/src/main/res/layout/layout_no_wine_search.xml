<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/StateLayoutTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_not_searched"
        app:layout_constraintBottom_toTopOf="@+id/iv_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/iv_food"
        android:layout_width="@dimen/state_image_width_height"
        android:layout_height="@dimen/state_image_width_height"
        android:layout_marginStart="@dimen/default_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_wine_glass" />
</androidx.constraintlayout.widget.ConstraintLayout>