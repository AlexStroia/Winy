<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SearchActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ButtonCornerRadiusTheme" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/round_button_ripple</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:layout_marginStart">@dimen/rounded_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/rounded_button_margin</item>
    </style>

    <style name="RecyclerTextView" parent="android:Widget.TextView">
        <item name="android:layout_marginStart">@dimen/default_content_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_content_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/item_wine_textview_font_size</item>
    </style>

    <style name="ActivityDetailFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="StateLayoutTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/state_layout_text_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/state_textview_content_margin</item>
        <item name="android:layout_marginEnd">@dimen/state_textview_content_margin</item>
    </style>

    <style name="AccountTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/state_layout_text_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/default_content_margin</item>
    </style>

    <style name="SettingsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:layout_marginTop">@dimen/textview_padding_top</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/settings_text_view_height</item>
        <item name="android:paddingStart">@dimen/textview_padding_start</item>
    </style>
</resources>
